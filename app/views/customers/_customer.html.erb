<div class="customer">
  <% if customer.image.attached? %>
    <%= image_tag customer.image, alt: customer.full_name, class: 'customer-image' %>
  <% end %>

  <h2><%= customer.full_name %></h2>
  <p><strong>Phone Number:</strong> <%= customer.phone_number %></p>
  <p><strong>Email Address:</strong> <%= customer.email_address.present? ? customer.email_address : 'N/A' %></p>
  <p><strong>Notes:</strong> <%= customer.notes %></p>
</div>
