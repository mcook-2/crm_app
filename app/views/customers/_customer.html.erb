<div class="card mb-4 " style="width: 100%; height: 100%;">
  <h5 class="card-title p-2"><%= customer.full_name %></h5>

  <div class="card-body d-flex flex-column">
    <% if customer.image.attached? %>
    <img src="<%= url_for(customer.image) %>" class="card-img-top" alt="<%= customer.full_name %>">
    <% end %>
    <p class="card-text">
      <strong>Notes:</strong> <%= customer.notes %>
    </p>
    <p class="card-text">
      <%= customer.phone_number %>
    </p>
    <p class="card-text">
      <%= customer.email_address.present? ? customer.email_address : 'N/A' %>
    </p>
  </div>
</div>
